 {
    "env": {
        "es2021": true,
        "node": true
    },

     "extends": ["prettier"],
     "plugins": ["prettier"],
     "parser": "babel-eslint",
     "parserOptions": {
         "ecmaVersion": 6,
         "ecmaFeatures": {
             "experimentalObjectRestSpread": true
         },
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": "error",
        "indent": "off",
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
